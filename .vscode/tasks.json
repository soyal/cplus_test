{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Build with Clang",//这个任务的名字在launch.json最后一项配置
          "type": "shell",
          "command": "clang++",
          "args": [
              //"test.cpp",这里是官方写法，不具有普遍性，注意两个配置文件的统一性即可
              "${file}",
              "-std=c++11",
              "-o",
              //"test.out",
              "${fileDirname}/${fileBasenameNoExtension}",
              "--debug"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          }
      }
  ]
}